<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:HTMLPanel>    
        <g:VerticalPanel ui:field="adminPanel">
            <g:Label text="To return home, press here."/>
            <g:Button ui:field="homeButton" text="Home"/>
            <g:Label text="To add a user enter a name and button color"/>
            <g:HorizontalPanel>
                <g:TextBox ui:field="nameField"/>
                <g:ListBox ui:field="colorField">
                    <g:item>
                        Blue
                    </g:item>
                    <g:item>
                        Red
                    </g:item>
                    <g:item>
                        Yellow
                    </g:item>
                    <g:item>
                        Green
                    </g:item>
                </g:ListBox>
                <g:Button ui:field="addUserButton" text="Add User"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>    
    </g:HTMLPanel>
</ui:UiBinder> 